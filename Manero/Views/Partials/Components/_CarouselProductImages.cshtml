@using Manero.Models.DTO
@using Manero.ViewModels;
@model ProductModel

<div id="carouselExampleIndicators" class="carousel slide" data-bs-theme="dark">

    <div id="carouselExampleIndicators" class="carousel slide" data-bs-theme="dark">
        <div class="carousel-indicators">
            @if (Model.Images != null && Model.Images.Any())
            {
                @for (var i = 0; i < Model.Images.Count; i++)
                {
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-label="Slide @i"></button>
                }
            }
        </div>
        <div class="carousel-inner">
            @if (Model.Images != null && Model.Images.Any())
            {
                for (var i = 0; i < Model.Images.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="~/assets/images/products/@Model.Images[i].ImageUrl" class="d-block w-100" alt="..." object-fit:cover;>
                    </div>
                }
            }
            else
            {
                <div class="image-placeholder"></div>
            }
        </div>
    </div>  
</div>


