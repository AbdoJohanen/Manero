                    <div class="contact-details">
                        <div class="contact-details-icon"><i class="fa-solid fa-phone-volume"></i></div>
                        <div class="contact-details-text">
                            <p><a href="tel:+17123456789">+17 123456789</a></p>
                            <p><a href="tel:+17987654321">+17 987654321</a></p>
                        </div>
                    </div>
                </div>
